<% include ../layouts/header %>

<div class="d-flex justify-content-between align-items-center">
    <h2><%= title %></h2>
</div>
<hr>

<% if(categories.length > 0) { %>
  <div class="list-group">
    <% categories.forEach( category => { %>
      <a href="/itens/categoria/<%= category.title.toLowerCase() %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= category.title %>
        <span class="badge badge-primary badge-pill"><%= category.qtdItens %></span>
      </a>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info">Nenhuma categoria cadastrada.</div>
<% } %>

<% include ../layouts/footer %>