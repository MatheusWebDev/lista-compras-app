<% include ../layouts/header %>

<div class="row">
	<div class="col-5">
		<h2><%= title %></h2>
		<form method="post" action="<%= typeof lista === 'undefined' ? '/listas' : `/listas/${lista._id}?_method=PUT` %>">
			<div class="form-group">
				<label>Nome</label>
				<% if(typeof lista === 'undefined'){ %>
					<input class="form-control" type="text" name="name" placeholder="Nome">
				<% } else { %>
					<input class="form-control" type="text" name="name" value="<%= lista.name %>">
				<% } %>
			</div>
		  <div class="form-group">
				<label>Mercado/Loja</label>
				<% if(typeof lista === 'undefined'){ %>
					<input class="form-control" type="text" name="store" placeholder="Onde serÃ¡ feito a compra?">
				<% } else { %>
					<input class="form-control" type="text" name="store" value="<%= lista.store %>">
				<% } %>
			</div>
			<button class="btn btn-primary" type="submit">Salvar</button>
		</form>
		<p>
			<a href="/listas" class="text-info">Voltar</a>
		</p>
	</div>
</div>

<% include ../layouts/footer %>
