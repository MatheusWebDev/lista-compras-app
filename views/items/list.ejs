<% include ../layouts/header %>

<% if(items.length > 0) { %>
  <h2><%= title %></h2>
  <div class="row">
    <% items.forEach( item => { %>
      <div class="col-3">
        <div class="card text-center mb-4">
          <img class="card-img-top img-fluid" src="<%= item.imgUrl %>" alt="<%= item.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <strong class="text-secondary mr-1">Categoria: </strong><span class="badge badge-primary badge-pill"><%= item.category %></span>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <% if(!catUrl){ %>
    <div class="alert alert-info">Nenhuma item cadastradado.</div>
  <% } else { %>
    <div class="alert alert-info">Nenhuma item cadastradado nesta categoria.</div>
  <% } %>
<% } %>

<% include ../layouts/footer %>